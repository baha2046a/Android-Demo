<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Search Setting">
        <SwitchPreferenceCompat
                app:key="switch_adult"
                app:title="Include Adult Content"
                app:defaultValue="true"/>

        <ListPreference
                app:key="search_result_lang"
                app:title="Prefer Language"
                app:entries="@array/lang_labels"
                app:entryValues="@array/lang_values"
                app:dialogTitle="Select Prefer Language"
                app:defaultValue="en-US"/>

        <ListPreference
                app:key="search_result_max"
                app:title="Maximum Results to Show"
                app:entries="@array/max_result_labels"
                app:entryValues="@array/max_result_values"
                app:dialogTitle="Select Results to Show"
                app:defaultValue="200"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="About">
        <Preference
                app:key="feedback"
                app:title="Send feedback"
                app:summary="Report technical issues or suggest new features"/>
    </PreferenceCategory>

</PreferenceScreen>